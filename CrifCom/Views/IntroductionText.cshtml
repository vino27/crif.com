@using ContentModels = Umbraco.Web.PublishedContentModels;
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = null;
}
@{
    var currentPage = Model.Content;
    if (currentPage.HasValue("introductionTitle") || currentPage.HasValue("introductionDescription"))
    {
        <section class="padding-30">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        @if (currentPage.HasValue("introductionTitle"))
                        {
                            <h1 class="title-grey">
                              @currentPage.GetPropertyValue("introductionTitle")
                            </h1>
                        }
                        @if (currentPage.HasValue("introductionDescription"))
                        {
                            <p>@Html.Raw(currentPage.GetPropertyValue("introductionDescription"))</p>
                        }
                       
                    </div>
                </div>
            </div>
        </section>
    }


}
